<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="@color/orange_strong"
                android:endColor="@color/orange_one"
                />
            <corners android:radius="100in" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="@color/gray"></solid>
            <corners android:radius="100in" />
        </shape>
    </item>
</layer-list>